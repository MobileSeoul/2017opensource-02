<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/foodrecommendlistrow2text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="TextView"
        android:textColor="#CC000000"
        android:textSize="18dp" />

    <Button
        android:id="@+id/foodrecommendlistrow2button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/foodrecommendlistrow2text1"
        android:layout_alignStart="@+id/foodrecommendlistrow2text1"
        android:layout_below="@+id/foodrecommendlistrow2text1"
        android:background="@android:color/holo_green_light"
        android:text="Map"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>