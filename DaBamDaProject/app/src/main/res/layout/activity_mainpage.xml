<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masiro.dabamdaproject.MainActivity">

    <ImageView
        android:id="@+id/MainPageImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/MainPageLaterView"
        android:layout_above="@id/MainPageWeatherView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:text="" />

    <TextView
        android:id="@+id/MainPageWeatherView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="50dip" />

    <TextView
        android:id="@+id/MainPageTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MainPageWeatherView"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="35dp" />

</RelativeLayout>

